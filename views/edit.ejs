<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/shop/<%=shop._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="shop[title]"
                    value="<%=shop.title %>">
            </div>
           
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="shop[images]"
                    value="<%=shop.images %>">
            </div>
            <div class="mb-3" >
                <label class="form-label" for="location">Location</label>"
                <input class="form-control" type="text" id="location" name="shop[location]" value="<%=shop.location%>" required>
            </div>
            <div class="mb-3" >
                <label class="form-label" for="phone">Phone</label>"
                <input class="form-control" type="text" id="phone" name="shop[phone]" value="<%=shop.phone%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Short description</label>
                <input class="form-control" type="text" id="description" name="shop[shortDescription]" value="<%=shop.shortDescription%>"required>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="shop[description]"><%= shop.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update info about shop</button>
            </div>
        </form>
        <a href="/all/<%= shop._id%>">Back To Campground</a>

    </div>
</div>